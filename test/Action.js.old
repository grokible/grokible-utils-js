'use strict';

var Action = require ('Action');

var expect = require ('chai').expect;
var Url = require ('Url');

var request = require ('request');

describe ("Action Class", function () {
    describe ("constructor ()", function () {
        it ("should set object properties to defaults", function () {
            var url = new Url ();
            var action = new Action ({ url: url });
            expect (action.getMethod ()).to.equal ('get');
        });
    });

    describe ("request", function () {
        it ("should do some shit", function (done) {
            request ('http://www.google.com', function (err, resp, body) {
                if ( ! err && resp.statusCode == 200) {
                    console.log (body);
                    done ();
                }
            });
        });
    });

